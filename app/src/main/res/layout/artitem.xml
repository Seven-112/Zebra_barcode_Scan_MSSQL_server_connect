<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape"
    android:layout_margin="30dp"

    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/li_artNo"
            android:layout_width="100dp"
            android:text="10471556"
            android:gravity="center"
            android:textSize="15dp"
            android:textColor="#000"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/li_ordNo"
            android:layout_width="130dp"
            android:text="2201973764"
            android:gravity="center"
            android:textSize="15dp"
            android:textColor="#000"
            android:layout_height="wrap_content"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/li_artCount"
                android:layout_width="wrap_content"
                android:text="10"
                android:gravity="center"
                android:textSize="15dp"
                android:textColor="#DD1212"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="wrap_content"
                android:text="/"
                android:gravity="center"
                android:textSize="15dp"
                android:textColor="#000"
                android:layout_marginLeft="10dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/li_artBar"
                android:layout_width="wrap_content"
                android:text="0"
                android:gravity="center"
                android:textSize="15dp"
                android:textColor="#DD1212"
                android:layout_marginLeft="10dp"
                android:layout_height="wrap_content"/>
        </LinearLayout>

    </LinearLayout>
    <TextView
        android:id="@+id/li_artName"
        android:layout_width="match_parent"
        android:text="ESKILSTUNA so3 Hillared beige"
        android:gravity="start"
        android:textSize="15dp"
        android:textColor="#000"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"/>

</LinearLayout>
